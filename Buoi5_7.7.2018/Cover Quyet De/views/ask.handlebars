<script type="text/javascript">
    function Text(TextNow, remainText, limitNum) {
        if (TextNow.value.length > limitNum) {
            TextNow.value = TextNow.value.substring(0, limitNum);
        } else {
            remainText.value = limitNum - TextNow.value.length;
        }
    }
</script>

