    <form action="/question/add" method="POST">

        <textarea id="question" name="contentQuestion" onkeydown="Text(this.form.contentQuestion,this.form.countdown,200);" onkeyup='Text(this.form.contentQuestion,this.form.countdown,200);'
          class="textarea-form"></textarea>
